{
  "name": "react-zustand-form",
  "version": "1.0.6",
  "description": "Concurrent-safe, user-first form state for React 18/19 powered by Zustand. Supports uncontrolled or controlled fields, coalesced server updates (dirty-first), async validation, and a tiny vanilla store.",
  "keywords": [
    "react-zustand-form",
    "react",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yahoohung/react-zustand-form.git"
  },
  "bugs": {
    "url": "https://github.com/yahoohung/react-zustand-form/issues"
  },
  "files": [
    "index.*",
    "esm/**",
    "plugins/**",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "type": "commonjs",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./esm/index.d.mts",
        "default": "./esm/index.mjs"
      },
      "default": {
        "types": "./index.d.ts",
        "default": "./index.js"
      }
    },
    "./*": {
      "import": {
        "types": "./esm/*.d.mts",
        "default": "./esm/*.mjs"
      },
      "default": {
        "types": "./*.d.ts",
        "default": "./*.js"
      }
    }
  },
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist .publish-tmp || true",
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest --colors",
    "test:watch": "vitest --coverage",
    "test:type": "vitest typecheck || echo 'Type check done'",
    "coverage": "npm run test -- --coverage",
    "packlist:assert": "node scripts/assert-packlist.cjs",
    "pack:dry": "npm run clean && npm run build && npm run prepublishOnly && npm run smoke && npm run size && npm run packlist:assert && npm pack --dry-run && npm run postpublish",
    "release": "npm run clean && npm run build && npm run prepublishOnly && npm run smoke && npm run size && npm run packlist:assert && npm publish && npm run postpublish",
    "prepublishOnly": "node scripts/prepublish-prepare.cjs",
    "postpublish": "node scripts/postpublish-clean.cjs",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "release:dry": "npm publish --dry-run",
    "size": "npm run build && size-limit",
    "smoke": "node scripts/smoke.cjs"
  },
  "engines": {
    "node": ">=18.17"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@size-limit/preset-small-lib": "^11.1.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "expect-type": "^1.1.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "size-limit": "^11.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5",
    "zustand": "^5.0.8"
  }
}
